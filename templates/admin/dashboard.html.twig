{% extends 'base.html.twig' %}

{% block title %}Administration - Tableau de bord{% endblock %}

{% block body %}
<div class="fr-container fr-py-6w">
    <div class="fr-grid-row">
        <div class="fr-col-12">
            <nav role="navigation" aria-label="Fil d'Ariane">
                <ol class="fr-breadcrumb__list">
                    <li>
                        <a class="fr-breadcrumb__link" href="/">Accueil</a>
                    </li>
                    <li>
                        <a class="fr-breadcrumb__link" aria-current="page">Administration</a>
                    </li>
                </ol>
            </nav>

            <h1 class="fr-h1 fr-mb-4w">
                Tableau de bord administrateur
            </h1>

            <div class="fr-alert fr-alert--info fr-mb-4w">
                <p>Bienvenue <strong>{{ app.user.identifiant }}</strong> - Vous êtes connecté en tant qu'administrateur.</p>
            </div>

            <!-- Statistiques -->
            <div class="fr-grid-row fr-grid-row--gutters fr-mb-6w">
                <div class="fr-col-12 fr-col-md-4">
                    <div class="fr-card fr-card--no-border">
                        <div class="fr-card__body">
                            <div class="fr-card__content">
                                <h3 class="fr-card__title">
                                    Étudiants inscrits
                                </h3>
                                <p class="fr-text--xl fr-mb-0"><strong>{{ etudiants|length }}</strong></p>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="fr-col-12 fr-col-md-4">
                    <div class="fr-card fr-card--no-border">
                        <div class="fr-card__body">
                            <div class="fr-card__content">
                                <h3 class="fr-card__title">
                                    Inscriptions en attente
                                </h3>
                                <p class="fr-text--xl fr-mb-0"><strong>0</strong></p>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="fr-col-12 fr-col-md-4">
                    <div class="fr-card fr-card--no-border">
                        <div class="fr-card__body">
                            <div class="fr-card__content">
                                <h3 class="fr-card__title">
                                    Inscriptions validées
                                </h3>
                                <p class="fr-text--xl fr-mb-0"><strong>{{ etudiants|length }}</strong></p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Actions rapides -->
            <section class="fr-mb-6w">
                <h2 class="fr-h3 fr-mb-3w">Actions rapides</h2>
                <div class="fr-btns-group fr-btns-group--inline">
                    <a class="fr-btn" href="{{ path('app_admin_inscriptions') }}">
                        Voir toutes les inscriptions
                    </a>
                    <a class="fr-btn fr-btn--secondary" href="{{ path('app_admin_utilisateurs') }}">
                        Gérer les utilisateurs
                    </a>
                    <a class="fr-btn fr-btn--tertiary" href="/">
                        Retour à l'accueil
                    </a>
                </div>
            </section>

            <!-- Liste des derniers étudiants -->
            <section>
                <h2 class="fr-h3 fr-mb-3w">Dernières inscriptions</h2>
                {% if etudiants|length > 0 %}
                    <div class="fr-table fr-table--no-caption">
                        <table>
                            <thead>
                                <tr>
                                    <th scope="col">Nom</th>
                                    <th scope="col">Prénom</th>
                                    <th scope="col">Email</th>
                                    <th scope="col">Téléphone</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for etudiant in etudiants|slice(0, 10) %}
                                    <tr>
                                        <td>{{ etudiant.nom }}</td>
                                        <td>{{ etudiant.prenom }}</td>
                                        <td>{{ etudiant.email }}</td>
                                        <td>{{ etudiant.tel }}</td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                {% else %}
                    <div class="fr-alert fr-alert--info">
                        <p>Aucune inscription pour le moment.</p>
                    </div>
                {% endif %}
            </section>
        </div>
    </div>
</div>
{% endblock %}
